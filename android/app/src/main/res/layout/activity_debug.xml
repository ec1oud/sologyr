<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:useDefaultMargins="true"
    android:columnCount="4">

    <TextView
        android:text="Update counters:"
        android:id="@+id/updateCountersLabel"
        android:layout_columnSpan="3" />

    <Button
        android:text="Update"
        android:onClick="update"
        android:textSize="12sp" />

    <TextView
        android:text="Location"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:id="@+id/locationUpdateCount" />

    <TextView
        android:text="Locality"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:layout_column="2" />

    <TextView
        android:layout_row="1"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal"
        android:id="@+id/localityUpdateCount" />


    <TextView
        android:text="Forecast"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/textView4" />

    <TextView
        android:layout_row="2"
        android:layout_column="1"
        android:id="@+id/forecastUpdateCount" />

    <TextView
        android:text="NowCast"
        android:layout_row="2"
        android:layout_column="2" />

    <TextView
        android:layout_row="2"
        android:layout_column="3"
        android:id="@+id/nowcastUpdateCount" />


    <TextView
        android:text="Current weather"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:layout_row="3"
        android:layout_column="1"
        android:id="@+id/currentWeatherUpdateCount" />

    <TextView
        android:text="Teleport:"
        android:layout_columnSpan="4" />

    <Button
        android:text="Majorstuen"
        android:onClick="teleportMajorstuen"
        android:textSize="12sp" />

    <Button
        android:text="Nittedal"
        android:onClick="teleportNittedal"
        android:textSize="12sp" />

    <Button
        android:text="Kirkenes"
        android:onClick="teleportKirkenes"
        android:textSize="12sp" />

    <Button
        android:text="Phoenix"
        android:onClick="teleportPhoenix"
        android:textSize="12sp" />

</GridLayout>